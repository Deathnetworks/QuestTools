<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:nav="clr-namespace:QuestTools.Navigation"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="500" Foreground="White" Background="#393939">
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style TargetType="WrapPanel">
            <Setter Property="Margin" Value="0,5" />
        </Style>
        <ObjectDataProvider x:Key="RouteModes"
                    MethodName="GetValues" 
                    ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="nav:RouteMode" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>
    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <WrapPanel HorizontalAlignment="Right">
                <TextBlock Text="Force Route Mode" Margin="0,0,10,0" HorizontalAlignment="Right" VerticalAlignment="Center" />
                <CheckBox IsChecked="{Binding Path=ForceRouteMode}"  Margin="0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            </WrapPanel>
            <WrapPanel HorizontalAlignment="Right">
                <TextBlock Text="Explorer Route Mode" Margin="0,0,10,0" HorizontalAlignment="Right" VerticalAlignment="Center" IsEnabled="{Binding Path=ForceRouteMode}" />
                <ComboBox ItemsSource="{Binding Source={StaticResource RouteModes}}" 
                          SelectedItem="{Binding Path=RouteMode}" 
                          IsEnabled="{Binding Path=ForceRouteMode}"
                          Width="250"/>
            </WrapPanel>
            <WrapPanel HorizontalAlignment="Right">
                <TextBlock Text="Skip Cut Scenes" Margin="0,0,10,0" HorizontalAlignment="Right" VerticalAlignment="Center" />
                <CheckBox IsChecked="{Binding Path=SkipCutScenes}"  Margin="0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            </WrapPanel>
            <WrapPanel HorizontalAlignment="Right">
                <TextBlock Text="Use Debug Logging" Margin="0,0,10,0" HorizontalAlignment="Right" VerticalAlignment="Center" />
                <CheckBox IsChecked="{Binding Path=DebugEnabled}"  Margin="0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            </WrapPanel>
            <WrapPanel HorizontalAlignment="Right">
                <TextBlock Text="Allow Profile Reloading" Margin="0,0,10,0" HorizontalAlignment="Right"  VerticalAlignment="Center"/>
                <CheckBox IsChecked="{Binding Path=AllowProfileReloading}"  Margin="0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            </WrapPanel>
            <WrapPanel HorizontalAlignment="Right">
                <TextBlock Text="Allow Profile Restarts" Margin="0,0,10,0" HorizontalAlignment="Right"  VerticalAlignment="Center"/>
                <CheckBox IsChecked="{Binding Path=AllowProfileRestarts}"  Margin="0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            </WrapPanel>
        </StackPanel>
    </StackPanel>
</UserControl>
